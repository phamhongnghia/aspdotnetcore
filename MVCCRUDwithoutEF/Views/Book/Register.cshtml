@{ ViewData["Title"] = "Register";}
<!-- Header -->
<header class="container-fluid header">
    <div class="row header__sticky">
        <div class="col-sm-3 header__logo">
            <h5>BookShop</h5>
        </div>
        <div class="col-sm-6 header__menu">
            <ul>
                <li><a asp-action="">Trang chủ</a></li>
                <li>
                    <a href="#">Tủ Sách</a>
                </li>
                <li>
                    <a href="#">Trẻ em</a>
                </li>
                <li>
                    <a href="#">Page</a>
                </li>
                <li><a href="contacts.html">Liên hệ</a></li>
            </ul>
        </div>
        <div class="col-sm-3 header__menu">
            <ul>
                <li>
                    <a class="text-capitalize" asp-action="Register">Đăng nhập / Đăng ký</a>
                </li>
            </ul>
        </div>
    </div>
</header>


<div class="header__banner bg__4">
    <div class="header__link">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a class="text-white" href="index.html">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-action="Register">Đăng nhập , Đăng ký</a></li>
        </ol>
    </div>
</div>


<!-- Register, login -->

<div class="container py-5">
    <div class="row">
        <div class="col-sm-6">
            <div class="title__custom pb-4">
                <h5>Đăng nhập</h5>
            </div>
            <div class="form__register">
                <form asp-action="CheckUser">
                    <label class="pt-2">Tên đăng nhập</label>
                    <input type="text" asp-for="Tendangnhap" required>
                    <label class="pt-3">Mật khẩu</label>
                    <input type="password" asp-for="Matkhau" required>
                    <input type="submit" value="Đăng nhập">
                </form>
                <div class="other__login py-3">
                    <label class="form-check pl-0 pb-3"><input class="mr-2" type="checkbox" name="savepassword"> Nhớ mật khẩu</label>
                    <label class="w-100 text-center">Đăng nhập bằng</label>
                    <div class="d-flex pt-2">
                        <a href="#">Facebook</a>
                        <a href="#">Google+</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="title__custom pb-4">
                <h5>Đăng ký</h5>
            </div>
            <div class="form__register">
                <form asp-action="CreateUser" autocomplete="off">
                    <label class="pt-2">Tên đăng nhập</label>
                    <input type="text" asp-for="Tendangnhap" required>

                    <label class="pt-3">Họ và tên</label>
                    <input type="text" asp-for="Hoten" required>

                    <label class="pt-3">Địa chỉ</label>
                    <input type="text" asp-for="Diachi" required>

                    <label class="pt-3">Mật khẩu</label>
                    <input type="password" asp-for="Matkhau" required>

                    <input style="opacity: 0" asp-for="idRole" value="1" />

                    <input type="submit" value="Đăng ký">
                </form>
            </div>
        </div>
    </div>
</div>




